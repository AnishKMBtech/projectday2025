---
import Layout from '../layouts/Layout.astro';
import { Content as ProjectContent } from '../content/project.md';
---

<Layout title="My Project">
	<div class="content">
		<ProjectContent />
	</div>
</Layout>

<style>
	.content {
		padding: 1rem;
	}

	.content :global(img) {
		max-width: 100%;
		height: auto;
		border-radius: 8px;
		margin: 1rem 0;
	}

	.content :global(ul), 
	.content :global(ol) {
		margin-left: 1.5rem;
		margin-bottom: 1rem;
	}

	.content :global(blockquote) {
		border-left: 4px solid #0066cc;
		padding-left: 1rem;
		margin: 1rem 0;
		color: #666;
	}
</style>